{
    "env": {
        "browser": true,
        "es2020": true
    },
    "parser": "babel-eslint",
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [
                    ".js"
                ]
            }
        ],
        "no-param-reassign": "off",
        "no-underscore-dangle": "off",
        "prettier/prettier": "error",
        "arrow-parens": "off",
        "object-curly-newline": ["error", {"ImportDeclaration": { "consistent": true }, "ExportDeclaration": { "consistent": true }}],
        "sort-vars": "error",
        "import/no-extraneous-dependencies": "off"
    }
}
